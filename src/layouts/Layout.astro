---
interface Props {
	title: string;
	description: string;
	keywords: string;
	canonicalURL: string;
	robots: string;
}

const { title, description, keywords, canonicalURL, robots } = Astro.props;



// Determinar si estamos en la p치gina de inicio
const isHomePage = Astro.url.pathname === "/";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<!-- DNS prefetch for external resources -->
		<link rel="dns-prefetch" href="//fonts.googleapis.com" />
		<link rel="dns-prefetch" href="//fonts.gstatic.com" />
		<!-- FAVICON -->
		<link rel="icon" type="image/png" href="/seo/icon.png" />
		<!-- THEME COLOR -->
		<meta name="theme-color" content="#800080" />
		
		<!-- PRELOAD CRITICAL RESOURCES -->
		<!-- Preload main hero image -->
		<!-- <link rel="preload" href="/" as="image" type="image/png" /> -->
		<!-- Preload custom fonts -->
		<link rel="preload" href="/font/Amiger Cartoon.ttf" as="font" type="font/ttf" crossorigin />
		<!-- Preload SEO images -->
		<link rel="preload" href="/seo/icon.png" as="image" type="image/png" />
		<link rel="preload" href="/seo/banner.png" as="image" type="image/png" />
		<!-- Preload Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" as="style" />
		<link rel="preload" href="https://fonts.googleapis.com/icon?family=Material+Icons" as="style" />
		<style>
			/* Critical CSS for immediate rendering */
			@keyframes fadeInOut {
				0%, 100% { opacity: 0.2; transform: translateY(10px); }
				50% { opacity: 0.8; transform: translateY(0); }
			}
			.fade-in-out {
				animation: fadeInOut 4s ease-in-out infinite;
			}
			
			/* Hero section critical styles */
			#hero {
				background: linear-gradient(to bottom, #eab308, #fde047);
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				overflow: hidden;
				position: relative;
			}
			
			/* Prevent layout shift */
			body {
				margin: 0;
				padding: 0;
			}
		</style>
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<!-- CANONICAL URL -->
		<link rel="canonical" href={canonicalURL} />
		<!-- ROBOTS -->
		<meta name="robots" content={robots} />
		<!-- OPENGRAPH TAGS (SOCIAL MEDIA) -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={`${canonicalURL}/seo/banner.png`} />
		<meta property="og:image:secure_url" content={`${canonicalURL}/seo/banner.png`} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="bobo" />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:site_name" content="bobo" />
		<meta property="og:locale" content="en_US" />
		
		<!-- TWITTER/X CARD DATA -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@bobo" />
		<meta name="twitter:creator" content="@bobo" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${canonicalURL}/seo/banner.png`} />
		<meta name="twitter:image:alt" content="bobo" />
		
		<!-- TELEGRAM SPECIFIC -->
		<meta property="telegram:channel" content="@ZoomieOnSolPortal" />
		<meta name="telegram:image" content={`${canonicalURL}/seo/banner.png`} />
		
		<!-- WHATSAPP AND MESSAGING APPS -->
		<meta property="og:image:url" content={`${canonicalURL}/seo/banner.png`} />
		<meta property="og:updated_time" content={new Date().toISOString()} />
		
		<!-- ADDITIONAL META TAGS FOR BETTER SHARING -->
		<meta name="theme-color" content="#eab308" />
		<meta name="msapplication-TileColor" content="#eab308" />
		<meta name="msapplication-TileImage" content="/seo/icon.png" />
		
		<!-- FORCE REFRESH FOR SOCIAL MEDIA CRAWLERS -->
		<meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
		<meta http-equiv="Pragma" content="no-cache" />
		<meta http-equiv="Expires" content="0" />
		<!-- GOOGLE FONTS AND MATERIAL ICONS -->
		<link
			href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
			rel="stylesheet"
		/>
		<link
			href="https://fonts.googleapis.com/icon?family=Material+Icons"
			rel="stylesheet"
		/>
		<!-- TITLE -->
		<title>{title}</title>
	</head>
	<body>
		<!-- BACKGROUND MUSIC -->
		<audio autoplay loop muted id="backgroundMusic">
			<source src="/bobo.mp3" type="audio/mpeg">
			Your browser does not support the audio element.
		</audio>

		<!-- INTRO SCREEN -->
		<div id="introScreen" class="fixed inset-0 bg-[url('/bg.png')] bg-cover bg-center flex items-center justify-center z-50">
			<div class="text-center">
				<!-- BOBO CHARACTER -->
				<div class="mb-8">
					<img src="/fix.png" alt="bobo" class="w-48 h-48 mx-auto animate-bounce" />
				</div>
				<!-- TITLE -->
				<h1 class="text-6xl md:text-8xl font-black mb-8" style="font-family: 'Amiger Cartoon', sans-serif; color: white; text-shadow: 4px 4px 0px black, -4px -4px 0px black, 4px -4px 0px black, -4px 4px 0px black;">
					$BOBO
				</h1>
				<!-- SUBTITLE -->
				<p class="text-xl md:text-2xl text-white font-bold mb-12 max-w-2xl mx-4" style="text-shadow: 2px 2px 0px black, -2px -2px 0px black, 2px -2px 0px black, -2px 2px 0px black;">
					The fearless explorer of the Solana blockchain!
				</p>
				<!-- MEET BOBO BUTTON -->
				<button id="meetBoboBtn" class="bg-white text-black font-black text-2xl py-6 px-12 rounded-2xl border-4 border-black transition-all duration-200 transform hover:scale-105 shadow-lg" style="font-family: 'Amiger Cartoon', sans-serif;">
					游 MEET BOBO
				</button>
			</div>
		</div>

		<!-- MUSIC CONTROLS -->
		<div id="musicControls" class="fixed bottom-4 left-4 z-40 hidden">
			<button id="muteToggle" class="bg-black bg-opacity-70 hover:bg-opacity-90 text-white p-3 rounded-full transition-all duration-200 shadow-lg">
				<span id="muteIcon">游댉</span>
			</button>
		</div>
		<!-- NAVIGATION BAR -->
		<!-- <Nav /> -->
		<slot />
		<!-- SITE FOOTER -->
		<!-- GAME INVITATION MODAL -->

		<script>
			document.addEventListener('DOMContentLoaded', () => {
				// Manejar m칰sica de fondo
				const audio = document.getElementById('backgroundMusic');
				const introScreen = document.getElementById('introScreen');
				const meetBoboBtn = document.getElementById('meetBoboBtn');
				const musicControls = document.getElementById('musicControls');
				const muteToggle = document.getElementById('muteToggle');
				const muteIcon = document.getElementById('muteIcon');
				let musicStarted = false;
				let isMuted = false;

				// Funci칩n para iniciar la m칰sica
				function startMusic() {
					if (!musicStarted && audio) {
						audio.muted = false;
						audio.play().catch(e => console.log('Audio play failed:', e));
						musicStarted = true;
						isMuted = false;
						// Ocultar pantalla de intro y mostrar controles
						introScreen.style.display = 'none';
						musicControls.classList.remove('hidden');
					}
				}

				// Funci칩n para toggle mute
				function toggleMute() {
					if (audio && musicStarted) {
						isMuted = !isMuted;
						audio.muted = isMuted;
						muteIcon.textContent = isMuted ? '游댆' : '游댉';
					}
				}

				// Funci칩n para guardar preferencia e iniciar m칰sica
				function saveAndStartMusic() {
					localStorage.setItem('boboMusicStarted', 'true');
					startMusic();
				}

				// Event listeners
				meetBoboBtn.addEventListener('click', saveAndStartMusic);
				muteToggle.addEventListener('click', toggleMute);

				// La pantalla de intro siempre se muestra al cargar la p치gina
				// Solo se oculta cuando el usuario hace clic en "Meet Bobo"

				// Verificar si estamos en la p치gina de inicio
				const isHomePage = window.location.pathname === '/' || window.location.pathname === '/index' || window.location.pathname === '/index.html';
				
				// Funci칩n para manejar el scroll a cualquier secci칩n
				function handleSmoothScroll(e, hash) {
					e.preventDefault();
					const isMobile = window.innerWidth < 1024;

					// Mapa de selectores espec칤ficos para diferentes secciones
					const sectionSelectors = {
						'#ca': isMobile ? '.lg\\:hidden #ca' : '.hidden.lg\\:flex #ca',
						'#community': '#community',
						'#roadmap': '#roadmap',
						'#faq': '#faq'
					};

					const selector = sectionSelectors[hash];
					if (!selector) return;

					const targetElement = document.querySelector(selector);
					if (targetElement) {
						setTimeout(() => {
							targetElement.scrollIntoView({ behavior: 'smooth' });
						}, 100);
					}
				}

				// Manejar todos los enlaces internos
				document.querySelectorAll('a[href^="#"]').forEach(link => {
					link.addEventListener('click', (e) => {
						const hash = link.getAttribute('href');
						if (hash && hash !== '#') {
							handleSmoothScroll(e, hash);
						}
					});
				});

				// Manejar enlaces que comienzan con /# (redirecciones desde otras p치ginas)
				if (isHomePage) {
					document.querySelectorAll('a[href^="/#"]').forEach(link => {
						link.addEventListener('click', (e) => {
							e.preventDefault();
							const hash = link.getAttribute('href').substring(1); // Quitar el / inicial
							if (hash && hash !== '#') {
								handleSmoothScroll(e, hash);
								// Actualizar la URL sin recargar la p치gina
								window.history.pushState(null, '', hash);
							}
						});
					});
				}

				// Manejar el evento cuando se carga la p치gina con un hash
				if (window.location.hash) {
					handleSmoothScroll(new Event('load'), window.location.hash);
				}

				// Manejar cambios de tama침o de ventana
				let resizeTimeout;
				window.addEventListener('resize', () => {
					clearTimeout(resizeTimeout);
					resizeTimeout = setTimeout(() => {
						if (window.location.hash) {
							handleSmoothScroll(new Event('resize'), window.location.hash);
						}
					}, 250);
				});
			});
		</script>

		<style is:global>
			/* CUSTOM FONT DEFINITIONS */
			@font-face {
				font-family: 'Amiger Cartoon';
				src: url('/font/Amiger Cartoon.ttf') format('truetype');
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			body::before {
				content: '';
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-image: url('/bg.png');
				background-size: cover;
				background-position: center;
				background-repeat: no-repeat;
				will-change: transform;
				z-index: -1;
			}

			html {
				font-family: "Open Sans", sans-serif;
				@apply text-slate-900;
				@apply bg-cover;
			}

			h1 {
				@apply text-5xl tracking-tight font-black text-purple-900; 
			}

			p, a {
				@apply text-lg;
			}

			li {
				@apply font-semibold;
			}

			a {
				@apply text-sky-500 font-medium hover:underline underline-offset-4 break-words;
			}

		</style>
	</body>
</html>